<%# <h1>Fullstack Courses</h1>
<%= render "courses/list", courses: @courses %>
<%# <%= link_to "Back to all courses", courses_path %>
<div class="container">
  <h1 class="mt-2">Fullstack Courses</h1>
<% @courses.each do |course| %>
        <div class="card mb-3">
          <div class="card-body">
            <h5 class="card-title"><%= course.title %></h5>
            <p class="card-text"><%= course.description %></p>
            <p class="card-text"><strong>Price:</strong> <%= course.price %></p>
            <%= link_to "View Course", course_path(course), class: "btn-view" %>
            <% if user_signed_in? && current_user != course.user %>
              <%= link_to "Enrol", enrol_new_course_path(course), class: "btn-enrol" %>
            <% end %>
            <% if user_signed_in? && current_user == course.user %>
              <%= link_to "Edit Course", edit_course_path(course), class: "btn btn-secondary" %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
</div>
