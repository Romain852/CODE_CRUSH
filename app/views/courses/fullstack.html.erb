<div class="container">
  <h1 class="mt-2">Fullstack Courses</h1>
<% @courses.each do |course| %>
        <div class="card mb-3">
          <div class="card-body">
            <h2 class="card-title"><%= course.title %></h2>
            <p class="card-text"><%= course.description %></p>
            <p class="card-text small-text"> ðŸ’° <%= number_to_currency(course.price) %></p>
            <%= link_to "Course details", course_path(course), class: "btn-view" %>
            <% if user_signed_in? && current_user != course.user %>
              <%= link_to "Enrol", enrol_new_course_path(course), class: "btn-enrol" %>
            <% end %>
            <% if user_signed_in? && current_user == course.user %>
              <%= link_to "Edit Course", edit_course_path(course), class: "btn-edit" %>
            <% end %>
          </div>
        </div>
      <% end %>
</div>
