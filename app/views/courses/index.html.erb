<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h1>All Our Courses</h1>
      <% @courses.each do |course| %>
        <div class="card mb-3">
          <div class="card-body">
            <h5 class="card-title"><%= course.title %></h5>
            <p class="card-text"><%= course.description %></p>
            <p class="card-text"><strong>Price:</strong> <%= course.price %></p>
            <%= link_to "View Course", course_path(course), class: "btn btn-gradient" %>
            <% if user_signed_in? && current_user == course.user %>
              <%= link_to "Edit Course", edit_course_path(course), class: "btn btn-secondary" %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="col-md-4">
      <button class="btn btn-gradient"><%= link_to "Create Your Course", new_course_path %></button>
    </div>
  </div>
</div>
