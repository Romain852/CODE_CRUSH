<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
      <h2 class="text-center mb-4">Log in</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { class: "form-control", autocomplete: "email", placeholder: "Email" } %>
        </div>

        <div class="form-group">
          <%= f.input :password,
                      required: false,
                      input_html: { class: "form-control", autocomplete: "current-password", placeholder: "Password" } %>
        </div>

        <div class="form-group">
          <%= f.input :remember_me, as: :boolean, label: "Remember me" if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Log in", class: "btn btn-primary btn-block" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
